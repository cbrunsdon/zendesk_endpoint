{
    "name": "zendesk",
    "display": "Zendesk",
    "description": "Consumes incoming notification messages and creates Zendesk tickets from them",
    "help": "http://guides.spreecommerce.com/integration/zendesk_integration.html",
    "consumers": [
        {
            "name": "import",
            "path": "/import",
            "description": "Import new notification to Zendesk.",
            "requires": {
                "parameters": [
                    {
                        "name": "url",
                        "description": "Destination Zendesk URL"
                    },
                    {
                        "name": "username",
                        "description": "Zendesk Username"
                    },
                    {
                        "name": "token",
                        "description": "Zendesk Login Token"
                    }
                ],
                "humanizers": {}
            },
            "recommends": {
                "keys": ["notification:info", "notification:warning", "notification:error"],
                "options": {
                    "retries_allowed": true
                }
            },
            "produces": {
            }
        }
    ]
}
